{
  "collectCoverageFrom": [
    "src/**/**/*.{js|ts}"
  ],
  "setupFiles": [
    "<rootDir>/tests/setup.js"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]",
    "<rootDir>/tests/integrationContract"
  ],
  "moduleFileExtensions": [
    "ts",
    "js"
  ],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "testRegex": "(/tests/.*(test|spec)|(\\.|/)(test|spec))\\.(ts|js)?$"
}
